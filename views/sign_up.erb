<div class="form">
  <a>Welcome...</a>
  <%= flash[:notice] %>
  <div>
    <h3> Sign-Up </h3>
    <form action="/users/sign_up" method="post" enctype='multipart/form-data'>
    AVATAR: <input type='file' name='avatar'>
      <input class="input-box" type="username" name="username" placeholder="user-Name" />
      <input class="input-box" type="email" name="email" placeholder="email">
      <input class="input-box" type="password" name="password" placeholder="password">
      <input class="submit-button" type="submit" value="Sign Up">
    </form>
  </div>

  <div>
    <h3> Sign-In</h3>
    <form action="/users/sign_in" method="post">
      <input class="input-box" type="email" name="email" placeholder="email">
      <input class="input-box" type="password" name="password" placeholder="password">
      <input class="submit-button" type="submit" value="Sign In">
    </form>
  </div>
</div>
</div>
