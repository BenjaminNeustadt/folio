<% if @current_page == '/account_page' %>
  <% data_url = '/images_data.json' %>
<% elsif  @user%>
  <% data_url = "/users/#{@user.username}/images_data" %>
<% else %>
  <% data_url = '/images_data.json' %>
<% end %>

<%=
js_map data_url,
       id: "cities-map",
       width: "800px",
       height: "500px",
       tooltips: {hover: false, html: true},
       markers: {color: "#0f0f0f"},
       style: "mapbox://styles/zeinzzu/clhxjl52y025v01prbpakagy0",
       zoom: 1
%>