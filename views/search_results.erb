<% if @matched_users.any? %>
  <ul class="search-results">
    <% @matched_users.each do |user| %>
    <li><a href="/users/<%= user.username %>"><%= user.username %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>No matching users found.</p>
<% end %>

<style>

.search-results {
  list-style: none;
  padding: 0;
  margin: 0;
}

.search-results ul {
  text-align: left;
  margin-bottom: 5px;
}

</style>